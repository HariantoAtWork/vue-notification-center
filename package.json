{
  "name": "@harianto/vue-notification-center",
  "version": "2.0.0",
  "description": "Vue NotificationCenter",
  "type": "module",
  "main": "./dist/vue-notification-center.umd.js",
  "module": "./dist/vue-notification-center.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue-notification-center.es.js",
      "require": "./dist/vue-notification-center.umd.js",
      "types": "./dist/vue-notification-center.d.ts"
    },
    "./dist/style.css": "./dist/vue-notification-center.es.css",
    "./lib/*": {
      "import": "./src/lib/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build",
    "format": "prettier --write \"src/**/*.{js,vue,scss}\"",
    "format:check": "prettier --check \"src/**/*.{js,vue,scss}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HariantoAtWork/vue-notification-center.git"
  },
  "keywords": [
    "vue",
    "plugin",
    "notification",
    "vue3",
    "nuxt3"
  ],
  "author": "Harianto van Insulinde",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/HariantoAtWork/vue-notification-center/issues"
  },
  "homepage": "https://github.com/HariantoAtWork/vue-notification-center#readme",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "deepmerge": "^4.3.1",
    "sass": "^1.56.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "rollup": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "vitest": "^3.1.1",
    "vue": "^3.5.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}